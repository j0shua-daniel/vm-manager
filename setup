#!/bin/bash
chmod +x *
mkdir -p ~/.config/vm-mgr/
PS3='Please choose an OS: '
options=("FreeBSD(bhyve)" "NetBSD(NVMM)" "Linux(KVM)" "Uninstall" "Quit")
select opt in "${options[@]}"
do
    case $opt in
	"FreeBSD(bhyve)")
            echo -e "\e[31mNOT SUPPORTED YET\e[0m"
	    break
            ;;
        "NetBSD(NVMM)")
            echo -e "\e[31mNOT SUPPORTED YET\e[0m"
	    break
            ;;
        "Linux(KVM)")
            sudo mv vm-mgr /usr/bin/
	    cd ../; rm -rf vm-mgr
            break
            ;;
	"Uninstall")
	    sudo rm /usr/bin/vm-mgr
	    break
            ;;
        "Quit")
            break
            ;;
        *) echo "invalid option $REPLY";;
    esac
done

cd ../; rm -rf vm-mgr
exit 0
