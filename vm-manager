#!/bin/sh
# Bash Menu Script Example
mkdir -p ~/.config/qemu-vms/
PS3='Please enter your choice: '
options=("Launch a VM" "Create a VM" "Delete a VM" "Quit")
select opt in "${options[@]}"
do
    case $opt in
        "Launch a VM")
            launch-vm
            ;;
        "Create a VM")
            create-vm
            ;;
        "Delete a VM")
            delete-vm
            ;;
        "Quit")
            break
            ;;
        *) echo "invalid option $REPLY";;
    esac
done

